extends base.pug


block style
    style
      include ../static/contact.css


block content
    div.container
        div
            | Contact Us
        form(action="/contact" method="post" id="contact")
            input(type="text" name="name" class="myinput" placeholder="enter your name")
            input(type="email" name="email"  class="myinput" placeholder="Enter you email id")
            input(type="number" name="age" placeholder="enter your age"  class="myinput")
            input(type="phone" name="contact_no" placeholder="enter your contact number" class="myinput")
            textarea(name="about" id="more" cols="30" rows="10"  class="myinput" placeholder="more about you")
            button(class="btn")
                |Submit
